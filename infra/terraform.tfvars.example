# Kubernetes Configuration
# Path to your kubeconfig file
kubeconfig_path = "~/.kube/config"

# Project Configuration
project_name = "ni2faa-profile"
namespace    = "ni2faa-profile"

# Domain Configuration
# Your domain name for the ingress
domain    = "example.com"
base_path = "/"

# Container Image
# Replace with your actual container registry URL for the Next.js application
# For GitHub Container Registry (used in CI/CD):
# image = "ghcr.io/ni2faa/me:latest"
# Or with specific commit SHA:
# image = "ghcr.io/ni2faa/me:abc123def456"
# For other registries:
image = "your-registry/ni2faa-profile:latest"

# Replica Configuration
# Number of pod replicas for high availability
replicas_web = 2

# Resource Limits and Requests
# Adjust based on your Next.js application's needs
# Next.js typically needs more memory for server-side rendering
resources_web = {
  limits_cpu    = "1000m"
  limits_memory = "1Gi"
  requests_cpu    = "200m"
  requests_memory = "256Mi"
}

# Secrets
# IMPORTANT: Base64 encode your secrets before adding them here
# Use: echo -n "your-secret-value" | base64
# Never commit actual secrets to version control
secret_data = {
  # Example:
  # DATABASE_URL = base64encode("postgresql://user:pass@host:5432/db")
  # API_KEY      = base64encode("your-api-key")
}

